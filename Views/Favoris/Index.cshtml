
@model IEnumerable<BikeWatcher.Models.Favoris>
@{
    ViewData["Title"] = "Favoris";
}

<div class="text-center">
    <h1 class="display-4">Favoris</h1>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">IDStation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDBikeStation)
                </td>
                <td>
                    <a asp-action="DeleteFavoris" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
